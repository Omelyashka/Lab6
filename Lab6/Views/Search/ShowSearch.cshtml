@model IEnumerable<Lab6.Models.Employees>


<h2>Search Results</h2>
@if (Model == null || !Model.Any())
{
        <p>No employees found.</p>
}
else
{
        <table class="table">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var emp in Model)
            {
                        <tr>
                            <td>@emp.FirstName</td>
                            <td>@emp.LastName</td>
                            <td>@emp.Email</td>
                            <td>@emp.DateTime</td>
                        </tr>
            }
            </tbody>
        </table>
}
<a asp-controller="AllEmployees" asp-action="List" style="background-color: #006666; color: white; border-radius: 5px; border:0">Back to List</a>